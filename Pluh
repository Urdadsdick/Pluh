if game.PlaceId == 3101667897 then
    -- Load Orion Library
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Create Window
    local Window = OrionLib:MakeWindow({
        Name = "Goated Hub - Auto Features",
        HidePremium = false,
        SaveConfig = true,
        ConfigFolder = "GoatedHub"
    })

    -- Services
    local replicatedStorage = game:GetService("ReplicatedStorage")

    -- Add Auto Tab
    local autoTab = Window:MakeTab({
        Name = "Auto",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Variable to control Auto Farm for Red Orb in City
    local autoFarmRedOrbEnabled = false
    local autoRebirthEnabled = false

    -- Function to start auto farming (collect Red Orb in City)
    local function startAutoFarmRedOrb()
        while autoFarmRedOrbEnabled do
            local success, err = pcall(function()
                -- Fire the orb event to collect the Red Orb in City
                replicatedStorage.rEvents.orbEvent:FireServer("collectOrb", "Red Orb", "City")
            end)
            if not success then
                warn("Error while auto farming Red Orb in City:", err)
            end
            wait(0.000000000000000000001)  -- Extremely low wait time
        end
    end

    -- Function to start auto rebirth
    local function startAutoRebirth()
        while autoRebirthEnabled do
            local success, err = pcall(function()
                -- Fire the rebirth event
                replicatedStorage.rEvents.rebirthEvent:FireServer("rebirthRequest")
            end)
            if not success then
                warn("Error while auto rebirthing:", err)
            end
            wait(1)  -- Adjust the delay as needed
        end
    end

    -- Add Auto Farm Toggle for Red Orb in City
    autoTab:AddToggle({
        Name = "Auto Farm Red Orb (City)",
        Default = false,
        Callback = function(state)
            autoFarmRedOrbEnabled = state
            if autoFarmRedOrbEnabled then
                spawn(startAutoFarmRedOrb)  -- Start the auto farming loop for Red Orb in City
            end
        end
    })

    -- Add Auto Rebirth Toggle
    autoTab:AddToggle({
        Name = "Auto Rebirth",
        Default = false,
        Callback = function(state)
            autoRebirthEnabled = state
            if autoRebirthEnabled then
                spawn(startAutoRebirth)  -- Start the auto rebirth loop
            end
        end
    })

    -- Initialize the Orion UI
    OrionLib:Init()
else
    warn("This script is not for this game.")
end
