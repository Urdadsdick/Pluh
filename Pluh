if game.PlaceId == 3101667897 then
    -- Load Orion Library
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Create Window
    local Window = OrionLib:MakeWindow({
        Name = "Goated Hub - Auto Features",
        HidePremium = false,
        SaveConfig = true,
        ConfigFolder = "GoatedHub"
    })

    -- Services
    local replicatedStorage = game:GetService("ReplicatedStorage")

    -- Add Auto Tab
    local autoTab = Window:MakeTab({
        Name = "Auto",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Variable to control Auto Farm for Gem in Magma City
    local autoFarmGemEnabled = false

    -- Function to start auto farming (collect Gem in Magma City)
    local function startAutoFarmGem()
        while autoFarmGemEnabled do
            local success, err = pcall(function()
                -- Fire the orb event to collect the Gem in Magma City
                replicatedStorage.rEvents.orbEvent:FireServer("collectOrb", "Gem", "Magma City")
            end)
            if not success then
                warn("Error while auto farming Gem in Magma City:", err)
            end
            wait(1)  -- Adjust the delay as needed
        end
    end

    -- Add Auto Farm Toggle for Gem in Magma City
    autoTab:AddToggle({
        Name = "Auto Farm Gem (Magma City)",
        Default = false,
        Callback = function(state)
            autoFarmGemEnabled = state
            if autoFarmGemEnabled then
                spawn(startAutoFarmGem)  -- Start the auto farming loop for Gem in Magma City
            end
        end
    })

    -- Initialize the Orion UI
    OrionLib:Init()
else
    warn("This script is not for this game.")
end
