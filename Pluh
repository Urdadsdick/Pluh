if game.PlaceId == 3101667897 then
    -- Load Orion Library
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Create Window
    local Window = OrionLib:MakeWindow({
        Name = "Goated Hub - Auto Features",
        HidePremium = false,
        SaveConfig = true,
        ConfigFolder = "GoatedHub"
    })

    -- Services
    local replicatedStorage = game:GetService("ReplicatedStorage")

    -- Add Auto Tab
    local autoTab = Window:MakeTab({
        Name = "Auto",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Variable to control Auto Farm
    local autoFarmEnabled = false

    -- Function to start auto farming (collect orb)
    local function startAutoFarm()
        while autoFarmEnabled do
            local success, err = pcall(function()
                -- Fire the orb event to collect the Yellow Orb in the City
                replicatedStorage.rEvents.orbEvent:FireServer("collectOrb", "Yellow Orb", "City")
            end)
            if not success then
                warn("Error while auto farming:", err)
            end
            wait(1)  -- Adjust the delay as needed
        end
    end

    -- Add Auto Farm Toggle
    autoTab:AddToggle({
        Name = "Auto Farm",
        Default = false,
        Callback = function(state)
            autoFarmEnabled = state
            if autoFarmEnabled then
                spawn(startAutoFarm)  -- Start the auto farming loop
            end
        end
    })

    -- Initialize the Orion UI
    OrionLib:Init()
else
    warn("This script is not for this game.")
end
