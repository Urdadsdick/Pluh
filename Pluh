if game.PlaceId == 3101667897 then
    -- Load Orion Library
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Create Window
    local Window = OrionLib:MakeWindow({
        Name = "Goated Hub - Auto Features",
        HidePremium = false,
        SaveConfig = true,
        ConfigFolder = "GoatedHub"
    })

    -- Services
    local replicatedStorage = game:GetService("ReplicatedStorage")

    -- Add Auto Tab
    local autoTab = Window:MakeTab({
        Name = "Auto",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Variable to control Auto Farm for Red Orb
    local autoFarmRedEnabled = false

    -- Variable to control Auto Farm for Gem
    local autoFarmGemEnabled = false

    -- Function to start auto farming (collect Red Orb)
    local function startAutoFarmRed()
        while autoFarmRedEnabled do
            local success, err = pcall(function()
                -- Fire the orb event to collect the Red Orb in the City
                replicatedStorage.rEvents.orbEvent:FireServer("collectOrb", "Red Orb", "City")
            end)
            if not success then
                warn("Error while auto farming Red Orb:", err)
            end
            wait(1)  -- Adjust the delay as needed
        end
    end

    -- Function to start auto farming (collect Gem)
    local function startAutoFarmGem()
        while autoFarmGemEnabled do
            local success, err = pcall(function()
                -- Fire the orb event to collect the Gem in the City
                replicatedStorage.rEvents.orbEvent:FireServer("collectOrb", "Gem", "City")
            end)
            if not success then
                warn("Error while auto farming Gem:", err)
            end
            wait(1)  -- Adjust the delay as needed
        end
    end

    -- Add Auto Farm Toggle for Red Orb
    autoTab:AddToggle({
        Name = "Auto Farm Red Orb",
        Default = false,
        Callback = function(state)
            autoFarmRedEnabled = state
            if autoFarmRedEnabled then
                spawn(startAutoFarmRed)  -- Start the auto farming loop for Red Orb
            end
        end
    })

    -- Add Auto Farm Toggle for Gem Orb
    autoTab:AddToggle({
        Name = "Auto Farm Gem",
        Default = false,
        Callback = function(state)
            autoFarmGemEnabled = state
            if autoFarmGemEnabled then
                spawn(startAutoFarmGem)  -- Start the auto farming loop for Gem
            end
        end
    })

    -- Initialize the Orion UI
    OrionLib:Init()
else
    warn("This script is not for this game.")
end
